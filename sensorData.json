/* styles.css */

/* Genel stil tanımlamalarını burada yapabilirsiniz */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f5f5f5; /* Açık gri arka plan */
}

header {
    background-color: #4caf50; /* Yeşil tonları */
    color: #fff; /* Beyaz metin */
    padding: 10px 0;
}

.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
}

.logo h1 {
    margin: 0;
}

nav ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

nav ul li {
    display: inline;
    margin-right: 20px;
}

nav ul li a {
    color: #fff; /* Beyaz metin */
    text-decoration: none;
}

main {
    max-width: 800px;
    margin: 20px auto;
    padding: 20px;
    background-color: #fff; /* Beyaz arka plan */
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.footer {
    text-align: center;
    padding: 10px 0;
    background-color: #4caf50; /* Yeşil tonları */
    color: #fff; /* Beyaz metin */
    position: fixed;
    bottom: 0;
    width: 100%;
}
